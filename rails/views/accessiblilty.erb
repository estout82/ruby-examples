<!-- autocomplete -->
- help browsers determine what and when to autofill
autocomplete="off"                      # browsers will not automatically fill in this field
autocomplete="email"
autocomplete="address"


<!-- rel -->
rel="nofollow"                           # tells search engines not to follow this link

